<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CatApp.View.Controls.SwipeControlsModal">
    <ContentView.Resources>
        <ResourceDictionary>
            <Style x:Key="GeneralTextStyle" TargetType="Label">
                <Setter Property="TextColor" Value="#fff"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="FontFamily" Value="Segoe Fluent Icons"/>
                <!-- BackgroundColor moved to Frame -->
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="VerticalOptions" Value="Center"/>
                <Setter Property="Margin" Value="0"/>
                <Setter Property="Padding" Value="10,10"/>
            </Style>
        </ResourceDictionary>
    </ContentView.Resources>

    <VerticalStackLayout>
        <!-- Frame added for rounded corners and background color -->
        <Frame BackgroundColor="#80000000" CornerRadius="20" Padding="0" HasShadow="False" BorderColor="Transparent" HorizontalOptions="Center" VerticalOptions="Center" Margin="0,20">
            <Label 
                Style="{StaticResource GeneralTextStyle}"
                Text="Swipe left and right to change video" />
        </Frame>
    </VerticalStackLayout>
</ContentView>
