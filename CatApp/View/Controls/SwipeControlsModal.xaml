<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CatApp.View.Controls.SwipeControlsModal">
    <ContentView.Resources>
        <ResourceDictionary>
            <Style x:Key="GeneralTextStyle" TargetType="Label">
                <Setter Property="TextColor" Value="#fff"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="FontFamily" Value="Segoe Fluent Icons"/>
                <Setter Property="BackgroundColor" Value="#000"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="VerticalOptions" Value="Center"/>
                <Setter Property="Margin" Value="0,20"/>
                <Setter Property="Padding" Value="10,10"/>
            </Style>
        </ResourceDictionary>
    </ContentView.Resources>
    
    <VerticalStackLayout>
        <Label 
            Style="{StaticResource GeneralTextStyle}"
            Text="&#xe927;   Swipe left and right to change video   &#xe927;" />
        
    </VerticalStackLayout>
</ContentView>
